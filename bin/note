#!/bin/sh

# [自分用]
#
# 説明
#   ~/note/ ディレクトリ内のメモをvimで開く
# 書式
#   note [file ..]
# 例
#   note file とした場合 vim ~/note/file.txt と同じ
#


if [ $# == 0 ]; then
    echo "[note list]"
    ls -1 ~/note/ | sed 's/.txt//g'
fi

if [ $# == 1 ]; then
    vim ~/note/$1.txt
fi

if [ $# == 2 ]; then
    vim -O ~/note/$1.txt ~/note/$2.txt
fi
